{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AccMan",
  "version": "0.1.1",
  "identifier": "com.romirom11.accman",
  "build": {
    "frontendDist": "../src/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm --dir src run dev",
    "beforeBuildCommand": "pnpm --dir src build"
  },
  "app": {
    "windows": [
      {
        "title": "AccMan",
        "width": 1280,
        "height": 900,
        "minWidth": 1280,
        "minHeight": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJGOTdGMTNFMzQxMURFQzAKUldUQTNoRTBQdkdYTDZLM2VOWGFLTHFBdFJkREs1a3p1SFI5bCs0emVKVHBqZzNpMUNxT2dLdXQK",
      "endpoints": [
        "https://github.com/romirom11/AccMan/releases/latest/download/latest.json"
      ]
    }
  }
}
